@using MudBlazor


<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h6">@Title</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@Content</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="OnActionClick">Aktion</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Content { get; set; }

    [Parameter]
    public EventCallback OnActionClick { get; set; }
}


}